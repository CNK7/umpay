{
  "version": 2,
  "name": "umso-telegram-bot",
  "builds": [
    {
      "src": "umpay/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/umpay/app.py"
    }
  ],
  "env": {
    "UMPAY_SECRET_KEY": "@umpay_secret_key",
    "TRON_API_KEY": "@tron_api_key",
    "USDT_WALLET_ADDRESS": "@usdt_wallet_address",
    "TRX_WALLET_ADDRESS": "@trx_wallet_address",
    "FLASK_ENV": "production"
  },
  "functions": {
    "umpay/app.py": {
      "maxDuration": 30
    }
  },
  "regions": ["hkg1", "sin1"],
  "github": {
    "enabled": true,
    "autoAlias": true
  }
}